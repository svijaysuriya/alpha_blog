<h1 class="text-center mt-4"><%=@user.username%>'s Profile</h1>

<%= gravatar_for @user, size:200 %>
<% if logged_in? && current_user == @user %>
    <div class="text-center mt-4">
        <%= link_to "Edit Profile",edit_user_path(@user), class: "btn btn-outline-primary" %>
    </div>
<% end %>
<% if @user.articles.count >0 %>
<h2 class=" text-center mt-4 card-text"><%=@user.username%> posted <%= pluralize(@user.articles.count,"article")%></h2>
<% else %>
<h2 class=" text-center mt-4 card-text"><%=@user.username%> not posted  any article yet :)</h2>
<% end %>

<div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>

