<h1 class="text-center mt-4">Category: <%=@category.name%></h1>

<% if logged_in? && current_user.admin? %>
    <div class="text-center mt-4">
        <%= link_to "Edit Category name",edit_category_path(@category), class: "btn btn-outline-primary" %>
    </div>
<% end %>
<% if @category.articles.count >0 %>
<h2 class =" text-center mt-4 card-text"><%=@category.name%> contains <%= pluralize(@category.articles.count,"article")%></h2>
<% else %>
<h2 class =" text-center mt-4 card-text"><%=@category.name%> has not any article yet :)</h2>
<% end %>

<div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>

