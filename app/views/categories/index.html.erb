<h1 class="text-center mt-4">Categories</h1>

<div class="flickr_pagination">
    <%= will_paginate @category, :container => false %>
</div>

<div class="container">
    <% @category.each do |i| %>
        <div class="row justify-content-md-center">
            <div class="col-4 mt-4">
                <div class="card text-center shadow  mb-5 bg-white rounded">
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to i.name, category_path(i), class:"text-success" %></h5>
                        <p class="card-text"><%= pluralize(i.articles.count,"article")%></p>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(i.created_at)%> ago,
                        edited <%=time_ago_in_words(i.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="flickr_pagination">
    <%= will_paginate @category, :container => false %>
</div>