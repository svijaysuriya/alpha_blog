<div class="container">
  <%= render 'shared/errors', obj: @article  %>
  <div class = "row justify-content-center">
    <div class="col-10">
      <% # form_with is for empty forms,to display the existing values use form_with like below, here we have worked with the object of model  %>
      <% # we know that we will submit this form to the update action %>
      <%= form_with(model: @article,class: "shadow p-3 mb-3 bg-info rounded", local: true, data: {turbo: false}) do |f|  %>
        <div class="form-group row">
          <%= f.label :title, class:"col-2 col-form-label text-light" %> 
          <div class="col-10">
          <%= f.text_field :title ,class: "form-control shadow rounded",placeholder: "Title of article"%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class:"col-2 col-form-label text-light" %> <br/>
          <div class="col-10">
          <%= f.text_area :description,class: "form-control shadow rounded",rows:10 ,placeholder: "Description of article" %>
        </div>
        </div>
        <div class="form-group row">
        <%= f.label :category, class:"col-2 col-form-label text-light" %> <br/>
        <div class="col-10">
        <%= f.collection_select( :category_ids, Category.order(:name), :id, :name,
            {prompt: "make your selection( can be empty) "},{multiple:true, size:3, class: "custom-select shadow rounded"}) %>

      </div>
      </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg " %>
        </div>
      <%end%>
     </div> 
     <div class="mb-3">
      <%= link_to '[ Cancel and return to Article Listing ]', articles_path, class:"text-info" %>
    </div>
  </div>
</div>